{
    "name": "porkbun-api-client",
    "version": "0.1.0",
    "description": "A modern, typed, and cacheable TypeScript client for the Porkbun API",
    "author": "Angel S. Moreno <angelxmoreno@gmail.com>",
    "homepage": "https://porkbun-api-client.axmdev.app",
    "bugs": {
        "url": "https://github.com/angelxmoreno/porkbun-api-client/issues"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:angelxmoreno/porkbun-api-client.git"
    },
    "keywords": [
        "api",
        "Porkbun"
    ],
    "license": "MIT",
    "private": false,
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "release": "release-it",
        "docs": "typedoc",
        "clean": "rimraf node_modules bun.lock dist && bun install",
        "build": "rimraf dist && tsc",
        "lint": "biome check .",
        "lint:fix": "biome check --write",
        "check-types": "tsc --noEmit",
        "test": "bun test",
        "test:coverage": "bun test --coverage --coverage-reporter=lcov --coverage-reporter=text --reporter=junit --reporter-outfile=./junit.xml"
    },
    "dependencies": {
        "@keyvhq/core": "^2.1.11",
        "axios": "^1.13.1",
        "pino": "^10.1.0",
        "zod": "3.25.76"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.3.2",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@release-it/conventional-changelog": "^10.0.1",
        "@types/bun": "^1.3.1",
        "axios-mock-adapter": "^2.1.0",
        "lefthook": "^2.0.2",
        "release-it": "^19.0.5",
        "rimraf": "^6.1.0",
        "typedoc": "^0.28.14",
        "typedoc-github-theme": "^0.3.1"
    },
    "peerDependencies": {
        "typescript": "^5"
    }
}
